@using TeduShop.Common.Constants
@using TeduShop.Web.Common
@model TeduShop.Web.Models.FooterViewModel
<div class="footer">
    <div class="footer-top">
        <div class="container">
            <div class="latter">
                <h6>@ResourceManagement.GetResourceText(Constant.Resource_RegisterToReceiveMail)</h6>
                <div class="sub-left-right">
                    <form>
                        <input type="text" placeholder="@ResourceManagement.GetResourceText(Constant.Resource_EnterEmailAtHere) ..." />
                        <input type="submit" value="@ResourceManagement.GetResourceText(Constant.Resource_Send)" />
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="latter-right">
                <p>@ResourceManagement.GetResourceText(Constant.Resource_Follow)</p>
                <ul class="face-in-to">
                    <li><a href="#"><span> </span></a></li>
                    <li><a href="#"><span class="facebook-in"> </span></a></li>
                    <div class="clearfix"> </div>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>
